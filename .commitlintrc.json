{
  "extends": ["@commitlint/config-conventional"],
  "rules": {
    "type-case": [2, "always", "lowerCase"],
    "type-empty": [2, "never"],
    "type-enum": [
      2,
      "always",
      ["feat", "fix", "docs", "build", "chore", "ci", "refactor", "revert", "style", "test"]
    ],
    "subject-case": [0, "never"],
    "subject-full-stop": [2, "always", "."]
  }
}
